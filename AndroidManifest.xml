<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tran.camera365days"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14" />

	<!-- Hardware permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    
	<uses-permission android:name="android.permission.INTERNET"/>
    
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
     
		   
		<meta-data android:name="com.google.android.gms.version"        
		android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name=".MainView"
            android:icon="@drawable/camera"
            android:label="Camera 365 days"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".FunctionsView"
            android:icon="@drawable/camera"
            android:label="Camera 365 days" >
        </activity>
        
		<activity
            
		    android:name=".ImagePreview"
            
		    android:icon="@drawable/camera"
            
		    android:label="Camera 365 days"
            
		    android:screenOrientation="landscape" >
        
		</activity>
		<activity
            android:name=".ImagePageView"
            android:icon="@drawable/camera"
            android:label="Camera 365 days"
            
			
			android:screenOrientation="landscape" >
        </activity>
		<activity
            android:name=".EditImageView"
            android:icon="@drawable/camera"
            
			android:screenOrientation="landscape"
            android:label="Camera 365 days" >
        </activity>
		<activity
            android:name=".AllAlbumsView"
            android:icon="@drawable/camera"
            android:label="Camera 365 days" >
        </activity>
		<activity
            android:name=".AlbumView"
            android:icon="@drawable/camera"
            android:label="Camera 365 days" >
        </activity>        
		<activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>
